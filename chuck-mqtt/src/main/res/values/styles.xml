<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MqttChuck.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mqtt_chuck_color_primary</item>
        <item name="colorPrimaryDark">@color/mqtt_chuck_color_primary_variant</item>
        <item name="colorSecondary">@color/mqtt_chuck_color_secondary</item>
        <item name="android:colorBackground">@color/mqtt_chuck_color_background</item>
        <item name="colorSurface">@color/mqtt_chuck_color_surface</item>
        <item name="colorError">@color/mqtt_chuck_status_error</item>
        <item name="colorOnPrimary">@color/mqtt_chuck_color_on_primary</item>
        <item name="colorOnSecondary">@color/mqtt_chuck_color_on_secondary</item>
        <item name="colorOnBackground">@color/mqtt_chuck_color_on_background</item>
        <item name="colorOnSurface">@color/mqtt_chuck_color_on_surface</item>
        <item name="colorOnError">@color/mqtt_chuck_color_on_error</item>
    </style>

    <style name="MqttChuck.TextAppearance.ListItem" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MqttChuck.TextAppearance.Label" parent="android:TextAppearance.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MqttChuck.TextAppearance.Value" parent="android:TextAppearance.Small">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="MqttChuck.TextAppearance.TransactionTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:gravity">top</item>
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProgressBar"
        parent="WrapContent">
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>